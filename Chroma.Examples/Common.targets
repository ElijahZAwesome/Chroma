<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <TargetFrameworks>net6.0;net6.0-android</TargetFrameworks>
        <OutputType Condition="$(TargetFramework.Contains('-android'))">Library</OutputType>
        <OutputType Condition="$(TargetFramework) == 'net6.0'">Exe</OutputType>
    </PropertyGroup>
    
    <ItemGroup>
        <ProjectReference Include="..\..\Chroma\Chroma.csproj" />
    </ItemGroup>
    
    <ItemGroup Condition="$(OutputType) != Exe">
        <EmbeddedResource Include="..\_common\**">
            <Link>Content\%(RecursiveDir)%(Filename)%(Extension)</Link>
        </EmbeddedResource>
    </ItemGroup>
</Project>
